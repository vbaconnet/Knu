FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     olaFlow;

startFrom       latestTime; //!!!!!!!!

startTime       0;

stopAt          endTime;

endTime         1500;

deltaT          0.001;

writeControl    adjustable;

writeInterval   20;

purgeWrite      0;

writeFormat     ascii;

writePrecision  7;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.5;

maxAlphaCo      0.15;

maxDeltaT       1.0;

libs
(
    "libbuoyancyModifiedTurbulenceModels.so"
);


// ************************************************************************* //

functions
{

    waterVolume
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        log             true;

        enabled         true;

        writeControl    timeStep; //adjustableRunTime;
        writeInterval   1000;

        writeFields     true;

        regionType      cellZone;
        name            bac;

        operation       volIntegrate;
        fields
        (
            alpha.water
        );

    }
